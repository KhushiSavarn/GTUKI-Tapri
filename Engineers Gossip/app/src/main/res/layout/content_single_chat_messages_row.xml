<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardCornerRadius="0.5dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:id="@+id/singlechat_linlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="left"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imguser_singlechat"
                android:layout_width="70dp"
                android:layout_height="70dp" android:layout_margin="2dp" android:background="@drawable/user_top"/>
            <TextView
                android:id="@+id/Single_chat_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Self"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/Single_chat_user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/transparent" />

            <TextView
                android:id="@+id/txtviewsendchat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:background="@drawable/bg_top_button_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="Chat "
                android:textColor="#FFFFFF" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#FFFFFF"></View>

            <TextView
                android:id="@+id/txtviewsendemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:background="@drawable/bg_top_button_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="Email"

                android:textColor="#FFFFFF" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#FFFFFF"></View>

            <TextView
                android:id="@+id/txtviewdelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:background="@drawable/bg_top_button_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="Remove"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/Single_chat_user_email"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:textColor="@color/gray_background" />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"></View>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Single_chat_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:paddingRight="20dp"
                android:text="Self"
                android:textColor="#000000"
                android:textIsSelectable="true" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_accept_reject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/verticle_view"
            android:gravity="bottom"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:visibility="visible">


            <TextView
                android:id="@+id/txtAccept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_row_button_selector"
                android:drawableTop="@drawable/ic_thumb_up"
                android:gravity="center_vertical|center_horizontal"
                android:text="ACCEPT"

                android:textColor="#FFAB00"
                android:textSize="8sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/verticle_view"></View>

            <TextView
                android:id="@+id/txtreject"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_row_button_selector"
                android:drawableTop="@drawable/ic_thumb_down"
                android:gravity="center"
                android:text="REJECT"
                android:textColor="#DD2C00"
                android:textSize="8sp"
                android:textStyle="bold" />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:visibility="gone">
        <TextView
            android:id="@+id/txtstatus_accept_reject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="Status"
            android:textColor="#FFAB00"
            android:textSize="8sp"
            android:textStyle="bold" />
</LinearLayout>
        <TextView
            android:id="@+id/Single_chat_timestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:gravity="right"
            android:text="12:30 PM"

            />

    </LinearLayout>
</androidx.cardview.widget.CardView>