<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardCornerRadius="0.5dp"
    app:cardElevation="2dp">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_buysellcolor"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/txtviewcatall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:background="@drawable/button_selector"
                android:padding="10dp"
                android:text="ALL"
                android:textColor="@color/buysellcolor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtviewcatbooks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:background="@drawable/button_selector"
                android:padding="10dp"
                android:text="BOOKS"
                android:textColor="@color/buysellcolor"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txtviewcatstationary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:background="@drawable/button_selector"
                android:padding="10dp"
                android:text="STATIONARY"
                android:textColor="@color/buysellcolor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtviewcateatry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:background="@drawable/button_selector"
                android:padding="10dp"
                android:text="FOOD ZONE"
                android:textColor="@color/buysellcolor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtviewcathousing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:background="@drawable/button_selector"
                android:padding="10dp"
                android:text="PG"
                android:textColor="@color/buysellcolor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtviewcatgadgets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:background="@drawable/button_selector"
                android:padding="10dp"
                android:text="GADGETS"
                android:textColor="@color/buysellcolor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtviewcatcloths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:background="@drawable/button_selector"
                android:padding="10dp"
                android:text="ACCESSORIES"
                android:textColor="@color/buysellcolor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtviewcatother"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:background="@drawable/button_selector"
                android:padding="10dp"
                android:text="OTHER"
                android:textColor="@color/buysellcolor"
                android:textStyle="bold" />


        </LinearLayout>
    </HorizontalScrollView>
</androidx.cardview.widget.CardView>